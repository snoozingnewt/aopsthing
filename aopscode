window.addEventListener('load', function() {
(function () {
    GM_addStyle(`
    body :not(i){font-family:"Sarasa Gothic SC",system-ui,emoji}
    [lang$="HK"] :not(i),[lang$="MO"] :not(i){font-family:"Sarasa Gothic HC",system-ui,emoji}
    [lang$="TW"] :not(i),[lang$="hant"] :not(i){font-family:"Sarasa Gothic TC",system-ui,emoji}
    :lang(ja) :not(i){font-family:"Sarasa Gothic J",system-ui,emoji}
    :lang(ko) :not(i){font-family:"Sarasa Gothic K",system-ui,emoji}
    :root body pre,:root body code,:root body samp,:root body kbd,:root body var{font-family:"Sarasa Fixed SC"}
    :root body pre span,:root body code span,:root body samp span,:root body kbd span,:root body var span{font-family:"Sarasa Fixed SC"}
    `);
})();

    $('head').append(`
<style>
a[title*="snoozingnewt"] {
color: cyan;
}
a[title*="SamuraiA"] {
color: orange;
}
a[title*="awesomeming327."] {
color: red;
}
</style>
`);

var change_color = function(){
document.body.style.background = "url('https://media.discordapp.net/attachments/763965102008696883/839178114449670144/unknown.png?width=2064&height=1019')"; //put any color in here
}
change_color();

}, false);
